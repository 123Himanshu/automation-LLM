# ─── ExcelFlow API — Environment Variables ───

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host.neon.tech/excelflow?sslmode=require

# Authentication
BASIC_AUTH_USERNAME=admin
BASIC_AUTH_PASSWORD=changeme

# S3 Storage (AWS S3, MinIO, or any S3-compatible service)
S3_BUCKET=excelflow-storage
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-access-key-id
S3_SECRET_ACCESS_KEY=your-secret-access-key
# S3_ENDPOINT=http://localhost:9000  # Uncomment for MinIO / LocalStack

MAX_UPLOAD_SIZE_MB=50

# AI (OpenAI)
AI_API_KEY=sk-your-api-key
AI_MODEL=gpt-4o
AI_MAX_TOKENS=4096

# Server
PORT=4000
NODE_ENV=development

# CORS — comma-separated origins for production
# Example: https://excelflow.vercel.app,http://localhost:3000
FRONTEND_URL=http://localhost:3000
